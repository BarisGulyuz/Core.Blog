@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h3 style="text-align:center">Profilim</h3>
<hr />

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgileri Düzenleme</h4>
            <form class="forms-sample" action="/Writer/WriterEditProfile/" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(x => x.WriterId)
                <div class="form-group" style="text-align:center">
                    <img src="/Upload/Writer/@Model.WriterImage" width="200" height="150" class="img-fluid" />
                    <input type="text" name="WriterImage" asp-for="WriterImage" hidden />
                </div>
                <div class="form-group">
                    <label>Profil Görsel</label>
                    <input type="text" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="file" class="form-control file-upload-info" name="WriterImage" asp-for="WriterImage" placeholder="Profil Görsel">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Ad-Soyad</label>
                    <input type="text" class="form-control" name="WriterName" asp-for="WriterName" id="exampleInputName1" placeholder="Adınız">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adres</label>
                    <input type="email" class="form-control" id="exampleInputEmail3" name="WriterMail" asp-for="WriterMail" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="text" class="form-control" name="WriterPassword" asp-for="WriterPassword" id="exampleInputPassword4" placeholder="Şifre">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Hakkımda</label>
                    <textarea class="form-control" name="WriterAbout" asp-for="WriterAbout" id="exampleTextarea1" rows="10"></textarea>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>

