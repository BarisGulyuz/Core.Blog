@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
        <div style="text-align:center" class="alert alert-warning col-md-9" role="alert">
            Mevcut yorum bulunamadı... İlk yorumu yapmaya ne dersiniz?.
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <small class="badge badge-success">@item.CommentDate.ToShortDateString()</small>
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }
    }
</div>