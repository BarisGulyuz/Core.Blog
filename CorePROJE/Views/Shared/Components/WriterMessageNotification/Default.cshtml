@model IEnumerable<EntityLayer.Concrete.Message2>

<style>
    a {
        color: black;
        text-decoration: none;
    }

        a:hover {
            color: black;
            text-decoration: none;
            font-size: 18px;
        }

    h6 {
        color: black;
    }

        p, h6:hover {
            color: black;
        }
</style>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    <div class="dropdown-divider"></div>
    @foreach (var item in Model)
    {
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="~/Upload/Writer/@item.SenderUser.WriterImage" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderUser.WriterName Sana Mesaj Gönderdi</h6>
                <p class="text-gray mb-0">@item.MessageDate.ToShortDateString()</p>
            </div>
        </a>
    }
    <div class="dropdown-divider"></div>
    <div class="dropdown-divider"></div>
    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center"><a href="/Message/Inbox/">@Model.Count() Yeni Mesaj</a></h6>
</div>