@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="ibox-content">
    <div class="container">
        <h3 style="text-align:center"><b>@Model.CategoryName</b> Kategorisi Düzenle</h3>
    </div>
    <div class="container">
        <form action="/Categories/Category/EditCategory/" class="form-group" method="post">
            <div class="row">
                @Html.HiddenFor(x => x.CategoryId)
                <div class="col-12 mb-3">
                    <b><label>Kategori</label></b>
                    <input type="text" class="form-control" asp-for="CategoryName" name="CategoryName" />
                </div>
                <div class="col-12 mb-3">
                    <b><label>Kategori Açıklama</label></b>
                    <textarea class="form-control" asp-for="CategoryDescription" name="CategoryDescription"></textarea>
                </div>
                <div class="col-12">
                    <button class="btn btn-outline-success" type="submit">Kaydet</button>
                    <a href="/Categories/Category/Index" class="btn btn-outline-danger">iptal</a>
                </div>

            </div>
        </form>
    </div>
</div>


