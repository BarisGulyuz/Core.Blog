@model IEnumerable<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    #addCat{
        width:100%;
        border-radius: 30px;
        font-size: 14px;
    }
    #addCat:hover{
        font-size: 16px;
        height: 40px;
    }
</style>
<div class="container">
    <h3 style="text-align:center">Kategori İşlemleri</h3>
</div>
<div class="ibox-content">
    <a class="btn btn-info" id="addCat" href="#">Yeni Kategori Ekle</a>
</div>
<div class="ibox-content">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th >Kategori Adı</th>
                    <th>Kategori Açıklama</th>
                    <th >İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryDescription</td>
                    <td>
                        <a class="btn btn-outline-warning" href="/Categories/Category/EditCategory/@item.CategoryId">Düzenle</a>
                        <a class="btn btn-outline-danger" href="">Sil</a>
                        <a class="btn btn-outline-dark" href="">Pasif Yap</a>
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>